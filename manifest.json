{
  "manifest_version": 3,
  "name": "YouTube Scroll Fullscreen",
  "version": "1.4.0",
  "description": "Enhances YouTubeâ€™s fullscreen experience by enabling scrolling in fullscreen and providing a configurable scroll-to-top button. Also adds an optional Mini-Player toggle button.",
  "permissions": ["storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["ytqp-mini.js"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  }
}
