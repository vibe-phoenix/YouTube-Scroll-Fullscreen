{
  "manifest_version": 3,
  "name": "YouTube Flex Fullscreen",
  "version": "1.0.4",
  "description": "Enables scrolling on YouTube when the YouTUbe player is in fullscreen + a configurable scroll-to-top button.",
  "permissions": ["storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  }
}
